<% content_for :for_locationmaps_head do %>
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />

<script src='//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<% end %>
<h1>Find your local focal hero</h1>
<div style='height: 700px; width: 900px;'>
 <div id='map' style='width: 600px; height: 700px; float:left;'>
 </div>
 <div id='list' style='width: 300px;height: 700px; float:right;'>
  <%
    lastcity=""
    @photographers.each do |p|
      if p.city!=lastcity then
        lastcity=p.city
  %>
  <h3><%= p.city %></h3>
  <% end %>
  <a href='/photog/<%= p.istock_name %>'><span class='nowrap photographername'><%= p.name %></span>, <span class='nowrap location'><%= p.city %></span> <span class='nowrap locationspecifier'>(<%= p.locationspecifier %>)</span></a>
  <% end %>
 </div>
</div>

<% content_for :for_locationmaps_body do %>
<script type='text/javascript'>
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function() {
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
$(document).on('page:load',function() {
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function() {
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
});
</script>
<% end %>
